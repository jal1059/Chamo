{
  "rules": {
    ".read": false,
    ".write": false,
    "lobbies": {
      "$lobbyCode": {
        ".read": "auth != null && root.child('lobbies/' + $lobbyCode + '/players/' + auth.uid).exists()",
        ".write": "auth != null && ((!data.exists() && newData.exists() && newData.child('host').val() == auth.uid && newData.child('players/' + auth.uid).exists()) || (data.exists() && data.child('host').val() == auth.uid) || (data.exists() && !newData.exists() && data.child('host').val() == auth.uid))",
        "host": {
          ".write": "auth != null && ((!data.exists() && newData.val() == auth.uid) || data.val() == auth.uid)",
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".write": "auth != null && (!data.exists() || root.child('lobbies/' + $lobbyCode + '/host').val() == auth.uid)"
        },
        "status": {
          ".write": "auth != null && (root.child('lobbies/' + $lobbyCode + '/host').val() == auth.uid || newData.parent().child('host').val() == auth.uid)"
        },
        "settings": {
          ".write": "auth != null && (root.child('lobbies/' + $lobbyCode + '/host').val() == auth.uid || newData.parent().child('host').val() == auth.uid)"
        },
        "players": {
          "$uid": {
            ".write": "auth != null && (auth.uid == $uid || root.child('lobbies/' + $lobbyCode + '/host').val() == auth.uid)"
          }
        },
        "game": {
          "votes": {
            "$uid": {
              ".write": "auth != null && auth.uid == $uid && root.child('lobbies/' + $lobbyCode + '/players/' + auth.uid).exists()"
            }
          },
          "playerVotes": {
            "$uid": {
              ".write": "auth != null && auth.uid == $uid && root.child('lobbies/' + $lobbyCode + '/players/' + auth.uid).exists()"
            }
          },
          "clueState": {
            ".write": "auth != null && root.child('lobbies/' + $lobbyCode + '/players/' + auth.uid).exists()"
          },
          "$other": {
            ".write": "auth != null && root.child('lobbies/' + $lobbyCode + '/host').val() == auth.uid"
          }
        }
      }
    }
  }
}
